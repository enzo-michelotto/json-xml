<configuration>
    <appender name="file" class="ch.qos.logback.core.FileAppender">
        <file>src/main/resources/app.log</file>
        <encoder>
            <pattern>[%d{yyyy-MM-dd'T'HH:mm:ss.SSS'Z', UTC}] [%c{25}] [%-5p] - %m%n</pattern>
        </encoder>
    </appender>

    <logger name="com.example" level="INFO" additivity="false">
        <appender-ref ref="file" />
    </logger>

    <root level="INFO">
        <appender-ref ref="file"/>
    </root>


</configuration>
